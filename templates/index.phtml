<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Pokemon Chooser</title>
        <link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

        <script src="/js/vue/vue.js"></script>
        <script src="/js/vue-resource/vue-resource.js"></script>
        <script src="/js/vue-strap/vue-strap.js"></script>
    </head>
    <body>

        <div class="container" id="app">
            <div class="page-header">
                <h1>Pokemon Chooser <small>{{ message }}</small></h1>
            </div>

            <accordion>
                <panel v-bind:header="type.name" v-on:click="loadType(type)" v-for="type in types" :is-open.sync="type.open">
                    <div class="row" v-if="type.damage_relations">
                        <div class="col-sm-4">
                            <div class="panel panel-success">
                                <div class="panel-heading">Weak To</div>
                                <ul class="list-group">
                                    <li class="list-group-item" v-for="effective in type.damage_relations.double_damage_from">
                                        {{ effective.name }}
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="panel panel-warning">
                                <div class="panel-heading">Resistant To</div>
                                <ul class="list-group">
                                    <li class="list-group-item" v-for="ineffective in type.damage_relations.half_damage_from">
                                        {{ ineffective.name }}
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="panel panel-danger">
                                <div class="panel-heading">Immune To</div>
                                <ul class="list-group">
                                    <li class="list-group-item" v-for="immune in type.damage_relations.no_damage_from">
                                        {{ immune.name }}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </panel>
            </accordion>
        </div>

        <script src="/js/app.js"></script>
    </body>
</html>
